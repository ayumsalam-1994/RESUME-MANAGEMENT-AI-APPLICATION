# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_ORIGIN=http://localhost:4200

# Database Connection
# Format: mysql://username:password@host:port/database
DATABASE_URL=mysql://user:password@localhost:3306/resume_ai

